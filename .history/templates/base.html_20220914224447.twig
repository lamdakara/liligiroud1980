						<a href="{{path('services')}}">Prestations et tarifs</a>
					</div>

					<!-- Logo -->
					<div id="mobileMenu">
						<a href="{{path('home')}}"><img src="{{asset('assets/img/logo_Lili_Giroud_massage_en_madérothérapie.svg')}}" alt="logo représentant deux mains l'une au-dessus de l'autre, au milieu le nom de Lili Giroud avec son service massages en madérothérapie" id="logo"></a>
