						<a href="{{path('home')}}" class="navBurgerLink">Accueil</a>
						<a href="{{path('discovery')}}" class="navBurgerLink">Découvrir</a>
						<a href="{{path('services')}}" class="navBurgerLink">Prestations et tarifs</a>
						<a href="{{path('meeting')}}" class="navBurgerLink">Rendez-vous</a>
						<a href="{{path('blog')}}" class="navBurgerLink">Blog</a>
						
						{% if app.user %}
							<a href="{{path('account')}}" class="navBurgerLink">Mon Compte</a>
						{% endif %}
						{% if app.user %}
							<a href="{{path('app_login')}}" class="navBurgerLink">Déconnexion</a>
