				<!-- PHOTO + TEXTE BIENVENUE -->
				<header id="accountHeader">
					<img src="{{asset('assets/img/account/womanprofil.jpg')}}" alt="votre photo de profil">
					<p class="titleThree">Bienvenue, {{app.user.firstname}} {{app.user.lastname}}.</p>
				</header>

				<!-- NAVIGATION COMPTE -->
				<nav id="navAccount">
