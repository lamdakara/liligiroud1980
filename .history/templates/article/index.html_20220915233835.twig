{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="container">
         <h1>Articles</h1>
    <a href="{{ path('app_article_new') }}" class="btn btn-primary">Nouveau article</a>
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>DateCreation</th>
                <th>Lien</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.titre }}</td>
                <td>{{ article.dateCreation ? article.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.lien }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">Afficher</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'article</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    
{% endblock %}
