{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container">
        <h1> {{ article.titre }}</h1>

    <div>
        <div class="text-center mt-3">
            <img class="img-fluid" src="{{ article.lien }}" alt="{{ article.titre }}" />
        </div>
         <div class="text-center mt-3 text-start">
            {{ article.contenu }}
        </div>
        <div class="mt-3">
            Nombre de visite: 
             <span class="badge bg-primary">
                {{ article.visites|length }}
            </span>
               
        </div>
         <div class="mt-1">
           Date pulication: 
             <span class="badge bg-primary">
                {{ article.dateCreation ? article.dateCreation|date('Y-m-d H:i:s') : '' }}
            </span>
               
        </div>
    </div>

    <a href="{{ path('app_article_index') }}" class="btn btn-warning">< Liste des articles</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning my-1">Modifier</a>

    {{ include('article/_delete_form.html.twig') }}
    </div>
{% endblock %}
